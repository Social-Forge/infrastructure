# ============================================================================
# INFRASTRUCTURE DOCKER ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and fill in your own values

# ============================================================================
# GENERAL
# ============================================================================
COMPOSE_PROJECT_NAME=infrastructure

# ============================================================================
# NGINX
# ============================================================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ============================================================================
# POSTGRESQL
# ============================================================================
DB_USER=forge
DB_PASSWORD=Riyan@2305
DB_NAME=forge_db
DB_PORT=5432

POSTGRES_USER=${DB_USER}
POSTGRES_PASSWORD=${DB_PASSWORD}
POSTGRES_DB=${DB_NAME}

# ============================================================================
# REDIS
# ============================================================================
REDIS_PASSWORD=your_redis_password_here

# ============================================================================
# MINIO (Object Storage)
# ============================================================================
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BROWSER_REDIRECT_URL=https://storage.agcforge.com
MINIO_SERVER_URL=https://api-storage.agcforge.com

# ============================================================================
# CENTRIFUGO (Real-time Messaging)
# ============================================================================
CENTRIFUGO_TOKEN_SECRET=your_centrifugo_token_secret_key
CENTRIFUGO_API_KEY=your_centrifugo_api_key
CENTRIFUGO_ADMIN_PASSWORD=your_centrifugo_admin_password
CENTRIFUGO_ADMIN_SECRET=your_centrifugo_admin_secret

# ============================================================================
# PGADMIN
# ============================================================================
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=your_pgadmin_password

# ============================================================================
# VOLUMES & STORAGE
# ============================================================================
# Leave empty to use Docker volumes
# Or specify a local path for local storage binding
# Example: /mnt/data/postgres
POSTGRES_DATA_PATH=
REDIS_DATA_PATH=
MINIO_DATA_PATH=
PGADMIN_DATA_PATH=
